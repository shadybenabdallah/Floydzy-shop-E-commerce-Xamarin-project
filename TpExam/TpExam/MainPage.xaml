<?xml version="1.0" encoding="utf-8"?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="TpExam.MainPage"
            xmlns:local="clr-namespace:TpExam"
            Title="Menu">

    <!-- Flyout content -->
    <FlyoutPage.Flyout>
        <local:FlyoutMenu x:Name="Flyout"/>
    </FlyoutPage.Flyout>

    <!-- Detail content -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:HomePage/>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
