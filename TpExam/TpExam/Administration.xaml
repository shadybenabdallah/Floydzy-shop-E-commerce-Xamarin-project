<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpExam.Administration">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#3498db" Padding="20" Spacing="10">
            <!-- Login Form -->
            <StackLayout>
                <Frame CornerRadius="15" BackgroundColor="#ffffff" Padding="10" Margin="0,0,0,10">
                    <Entry x:Name="UsernameEntry" Placeholder="Username" BackgroundColor="Transparent" 
                           HeightRequest="40" TextColor="#2c3e50" PlaceholderColor="#7f8c8d" />
                </Frame>
                <Frame CornerRadius="15" BackgroundColor="#ffffff" Padding="10" Margin="0,0,0,10">
                    <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" BackgroundColor="Transparent" 
                           HeightRequest="40" TextColor="#2c3e50" PlaceholderColor="#7f8c8d" />
                </Frame>
                <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="#ffffff" TextColor="#3498db" CornerRadius="10" />
                <Label Text="🎮" FontSize="50" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" TextColor="#ffffff" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
